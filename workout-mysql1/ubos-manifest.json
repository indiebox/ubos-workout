{
    "type" : "app",

    "roles" : {
        "apache2" : {
            "defaultcontext" : "/workout-mysql1",
            "appconfigitems" : [
                {
                    "type" : "file",
                    "name" : "db",
                    "template"     : "db.tmpl",
                    "templatelang" : "varsubst"
                }
            ]
        },
        "mysql" : {
            "appconfigitems" : [
                {
                    "type"         : "mysql-database",
                    "name"         : "foo",
                    "privileges"   : "SELECT, UPDATE, INSERT, DELETE",
                    "retentionbucket" : "bar",
                    "retentionpolicy" : "keep"
                },
                {
                    "type"         : "sqlscript",
                    "name"         : "foo",
                    "source"       : "create.sql"
                }
            ],
            "installers" : [
                {
                    "name"         : "foo",
                    "type"         : "sqlscript",
                    "source"       : "install.sql"
                }
            ],
            "upgraders" : [
                {
                    "name"         : "foo",
                    "type"         : "sqlscript",
                    "source"       : "upgrade.sql"
                }
            ]
        }
    }
}
