developer="http://indiecomputing.com/"
url="http://ubos.net/"
maintainer=${developer}
pkgname=$(basename $(pwd))
pkgver=0.3
pkgrel=1
pkgdesc="Exercises ubos-admin: files"
arch=('any')
license=('AGPL3')
options=('!strip')

package() {
# Manifest
    install -D -m0644 ${startdir}/ubos-manifest.json ${pkgdir}/ubos/lib/ubos/manifests/${pkgname}.json

# Code
    install -D -m0644 ${startdir}/{file-copy.txt,file-template-perlscript.pl,file-template-varsubst.tmpl} -t ${pkgdir}/ubos/share/${pkgname}/
    cp -a ${startdir}/{dollar-1,dollar-2} ${pkgdir}/ubos/share/${pkgname}/
}
