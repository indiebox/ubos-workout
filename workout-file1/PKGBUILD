developer="http://indiecomputing.com/"
url="http://ubos.net/"
maintainer=${developer}
pkgname=$(basename $(pwd))
pkgver=0.2
pkgrel=1
pkgdesc="Exercises ubos-admin: files"
arch=('any')
license=('AGPL3')
options=('!strip')

package() {
# Manifest
    mkdir -p ${pkgdir}/var/lib/ubos/manifests
    install -m0644 $startdir/ubos-manifest.json ${pkgdir}/var/lib/ubos/manifests/${pkgname}.json

# Code
    mkdir -p $pkgdir/usr/share/${pkgname}
    cp -a ${startdir}/{dollar-1,dollar-2} $pkgdir/usr/share/${pkgname}/
    cp -a ${startdir}/{file-copy.txt,file-template-perlscript.pl,file-template-varsubst.tmpl} ${pkgdir}/usr/share/${pkgname}/
}
